// prisma/schema.prisma
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Prisma v4 reads this
}

generator client {
  provider = "prisma-client-js"
  output   = "../prisma-client"
}model User {
  id           String   @id @map("_id") @db.ObjectId @default(auto()) // <- add @default(auto())
  name         String?
  email        String   @unique
  passwordHash String
  profileImage String?
  onlineStatus String?
  lastSeen     DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Conversation {
  id            String   @id @map("_id") @db.ObjectId
  type          String
  participantIds String[]
  lastMessageId String?  @db.ObjectId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Message {
  id             String   @id @map("_id") @db.ObjectId
  conversationId String   @db.ObjectId
  senderId       String   @db.ObjectId
  content        String?
  mediaIds       String[]
  timestamp      DateTime @default(now())
  status         String
}
